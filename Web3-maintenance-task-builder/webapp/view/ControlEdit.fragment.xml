<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover id="editControl" title="Update Control Information" class="sapUiContentPadding" placement="Bottom" contentWidth="30%">
        <beginButton>
            <Button text="Save" press="handleControlSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="handleCloseButton" />
        </endButton>
        <content>
            <Label id="fieldName" text="Field Name" labelFor="fieldNameInput" required="true" />
            <Input id="fieldNameInput" ariaLabelledBy="fieldName"/>
            <Label id="fieldDescription" text="Field Description" labelFor="fieldDescInput" />
            <Input id="fieldDescInput" ariaLabelledBy="fieldDescription"/>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>
